{
  "name": "readme-package-icons",
  "version": "1.1.4",
  "main": "index.js",
  "repository": "git@github.com:jpb06/readme-package-icons.git",
  "author": "jpb06 <jp.bois.06@outlook.fr>",
  "license": "MIT",
  "bin": {
    "generateReadmeIcons": "./cli/generate-readme-icons.cli.js"
  },
  "scripts": {
    "copy-package": "copyfiles package.json ./dist/",
    "copy-readme": "copyfiles README.md ./dist/",
    "build": "del-cli ./dist && tsc --project tsconfig.prod.json",
    "postbuild": "pnpm copy-package && pnpm copy-readme",
    "test": "jest",
    "test-changes": "jest --watch",
    "test-dev": "jest --coverage --watchAll",
    "test-silentcov": "jest --coverage --silent --runInBand --watchAll=false",
    "test-ci": "jest --ci --coverage",
    "lint": "eslint ./src",
    "type-check": "tsc --noEmit",
    "cli": "pnpm build && node ./dist/cli/generate-readme-icons.cli.js -h 70"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "fs-extra": "^10.1.0",
    "yargs": "^17.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@jest/types": "^29.1.2",
    "@swc/core": "^1.3.5",
    "@swc/jest": "^0.2.23",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.8.3",
    "@types/yargs": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.0.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.1",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.1.2",
    "jest-mock": "^29.1.2",
    "jest-watch-typeahead": "^2.2.0",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4"
  }
}
