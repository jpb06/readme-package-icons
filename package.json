{
  "name": "readme-package-icons",
  "version": "1.1.8",
  "main": "index.js",
  "repository": "git@github.com:jpb06/readme-package-icons.git",
  "author": "jpb06 <jp.bois.06@outlook.fr>",
  "license": "MIT",
  "bin": {
    "generateReadmeIcons": "./cli/generate-readme-icons.cli.js"
  },
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "copy-package": "copyfiles package.json ./dist/",
    "copy-readme": "copyfiles README.md ./dist/",
    "build": "del-cli ./dist && tsc --project tsconfig.prod.json",
    "postbuild": "pnpm copy-package && pnpm copy-readme",
    "test": "jest",
    "test-changes": "jest --watch",
    "test-dev": "jest --coverage --watchAll",
    "test-silentcov": "jest --coverage --silent --runInBand --watchAll=false",
    "test-ci": "jest --ci --coverage",
    "lint": "eslint ./src",
    "type-check": "tsc --noEmit",
    "cli": "pnpm build && node ./dist/cli/generate-readme-icons.cli.js -h 70"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "fs-extra": "^11.1.0",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@jest/types": "^29.4.0",
    "@swc/core": "^1.3.28",
    "@swc/jest": "^0.2.24",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.4.0",
    "@types/node": "^20.10.5",
    "@types/yargs": "^17.0.20",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.0.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.4.0",
    "jest-mock": "^29.4.0",
    "jest-watch-typeahead": "^2.2.2",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  }
}
